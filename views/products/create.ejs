<%- include('../partials/header') %>

    <div class="card-container fade-in">
        <div class="auth-header">
            <h2><i class="fas fa-tag"></i> Sell a Product</h2>
            <p>List your item for sale</p>
        </div>

        <% if (locals.error && locals.error.length> 0) { %>
            <div class="alert">
                <%= error %>
            </div>
            <% } %>

                <form action="/products" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Product Title</label>
                        <input type="text" name="title" required placeholder="e.g. Scientific Calculator"
                            value="<%= locals.formData ? formData.title : '' %>">
                    </div>

                    <div class="form-group">
                        <label>Price (BDT)</label>
                        <input type="number" name="price" required placeholder="500"
                            value="<%= locals.formData ? formData.price : '' %>">
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        <select name="category">
                            <option value="Books">Books</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Stationery">Stationery</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" rows="5" required
                            placeholder="Describe condition, reason for selling..."><%= locals.formData ? formData.description : '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label>Images (Max 5)</label>
                        <input type="file" name="images" multiple accept="image/*">
                        <small>First image will be the cover.</small>
                    </div>

                    <div class="form-group" style="display: flex; align-items: center; gap: 10px;">
                        <input type="checkbox" name="isAnonymous" id="isAnonymous" style="width: auto; margin: 0;">
                        <label for="isAnonymous" style="margin: 0; cursor: pointer;">Post Anonymously (Hide my name &
                            details)</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Post Item</button>
                </form>
    </div>

    <%- include('../partials/footer') %>