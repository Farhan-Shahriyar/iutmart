<%- include('partials/header') %>

    <!-- Market Dashboard Header -->
    <div class="bg-surface border-b border-border py-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <!-- Market Status -->
                <div class="bg-bg border border-border p-4 rounded">
                    <p class="text-text-secondary text-xs font-mono uppercase">Market Status</p>
                    <div class="flex items-baseline space-x-2 mt-1">
                        <span class="text-2xl font-mono text-bull font-bold">OPEN</span>
                        <span class="text-xs text-text-secondary">09:30:00 EST</span>
                    </div>
                    <div class="mt-2 w-full bg-border h-1 rounded-full overflow-hidden">
                        <div class="bg-bull h-full w-2/3 animate-pulse"></div>
                    </div>
                </div>

                <!-- Volatility Index -->
                <div class="bg-bg border border-border p-4 rounded">
                    <p class="text-text-secondary text-xs font-mono uppercase">VIX (Volatility)</p>
                    <div class="flex items-baseline space-x-2 mt-1">
                        <span class="text-2xl font-mono text-white font-bold">18.42</span>
                        <span class="text-xs text-bear font-mono">▼ -1.2%</span>
                    </div>
                    <!-- Mini line graph (simulated with CSS) -->
                    <div class="flex items-end space-x-1 h-3 mt-2">
                        <div class="w-1 bg-border h-2"></div>
                        <div class="w-1 bg-border h-3"></div>
                        <div class="w-1 bg-bear h-2"></div>
                        <div class="w-1 bg-border h-4"></div>
                    </div>
                </div>

                <!-- Total Volume -->
                <div class="bg-bg border border-border p-4 rounded">
                    <p class="text-text-secondary text-xs font-mono uppercase">24h Volume</p>
                    <div class="flex items-baseline space-x-2 mt-1">
                        <span class="text-2xl font-mono text-white font-bold">2.4M</span>
                        <span class="text-xs text-bull font-mono">▲ +12%</span>
                    </div>
                </div>

                <!-- Active Traders -->
                <div class="bg-bg border border-border p-4 rounded">
                    <p class="text-text-secondary text-xs font-mono uppercase">Active Traders</p>
                    <div class="flex items-baseline space-x-2 mt-1">
                        <span class="text-2xl font-mono text-action font-bold">1,204</span>
                        <span class="text-xs text-bull font-mono">▲ +45</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Trading Floor -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl text-white font-bold flex items-center space-x-2">
                <span class="w-2 h-6 bg-action block"></span>
                <span>TOP MOVERS</span>
            </h2>

            <div class="flex space-x-2">
                <button
                    class="px-3 py-1 bg-surface border border-border text-xs text-white font-mono hover:bg-border">ALL</button>
                <button
                    class="px-3 py-1 bg-bg border border-border text-xs text-text-secondary font-mono hover:bg-border">TECH</button>
                <button
                    class="px-3 py-1 bg-bg border border-border text-xs text-text-secondary font-mono hover:bg-border">DORM</button>
            </div>
        </div>

        <!-- Features Grid (Legacy Features modernized) -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div
                class="bg-surface border border-border p-6 rounded relative overflow-hidden group hover:border-action transition cursor-crosshair">
                <div class="absolute top-0 right-0 p-4 opacity-50"><i
                        class="fas fa-shield-alt text-4xl text-border"></i></div>
                <h3 class="text-white font-bold mb-2">VERIFIED ASSETS</h3>
                <p class="text-text-secondary text-sm">Strict KYC: Only @iut-dhaka.edu allowed.</p>
            </div>
            <div
                class="bg-surface border border-border p-6 rounded relative overflow-hidden group hover:border-action transition cursor-crosshair">
                <div class="absolute top-0 right-0 p-4 opacity-50"><i class="fas fa-bolt text-4xl text-border"></i>
                </div>
                <h3 class="text-white font-bold mb-2">HFT EXECUTION</h3>
                <p class="text-text-secondary text-sm">Real-time messaging & instant settlement.</p>
            </div>
            <div
                class="bg-surface border border-border p-6 rounded relative overflow-hidden group hover:border-action transition cursor-crosshair">
                <div class="absolute top-0 right-0 p-4 opacity-50"><i
                        class="fas fa-chart-line text-4xl text-border"></i></div>
                <h3 class="text-white font-bold mb-2">MARKET MAKERS</h3>
                <p class="text-text-secondary text-sm">List assets in seconds. High liquidity.</p>
            </div>
        </div>

        <% if (!user) { %>
            <!-- Call to Action (IPO) -->
            <div
                class="bg-gradient-to-r from-bg to-surface border border-border p-8 rounded text-center relative overflow-hidden">
                <div class="relative z-10">
                    <h2 class="text-2xl font-bold text-white mb-4">START TRADING TODAY</h2>
                    <div class="flex justify-center space-x-4">
                        <a href="/auth/login"
                            class="px-6 py-2 border border-action text-action font-mono text-sm hover:bg-action hover:text-white transition">LOGIN</a>
                        <a href="/auth/register"
                            class="px-6 py-2 bg-bull text-black font-mono font-bold text-sm hover:bg-green-400 transition">OPEN
                            ACCOUNT</a>
                    </div>
                </div>
            </div>
            <% } %>

    </div>

    <%- include('partials/footer') %>