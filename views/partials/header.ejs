<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !='undefined' ? title : 'IUT Marketplace' %>
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar">
        <div class="container nav-container">
            <a href="/" class="brand">
                <i class="fas fa-store"></i> IUT Market
            </a>
            <ul class="nav-links">
                <li><a href="/products">Browse</a></li>
                <% if (user) { %>
                    <li><a href="/products/create" class="btn-nav-action"><i class="fas fa-plus"></i> Sell</a></li>
                    <li>
                        <a href="/chat" class="nav-btn" title="Messages">
                            <div class="icon-wrapper">
                                <i class="fas fa-envelope"></i>
                                <% if (locals.unreadCount && locals.unreadCount> 0) { %>
                                    <span class="nav-badge">
                                        <%= unreadCount %>
                                    </span>
                                    <% } %>
                            </div>
                            <span>Messages</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" onclick="openProfileModal(event)" class="nav-profile">
                            <img src="/uploads/<%= user.avatar || 'default-avatar.png' %>" class="nav-avatar"
                                alt="Avatar"
                                onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= user.name %>&background=CC2936&color=fff&size=64';">
                            <span>Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="/auth/logout" class="nav-btn logout-btn" title="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                    <% } else { %>
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register" class="btn-nav-action">Join</a></li>
                        <% } %>
            </ul>
        </div>
    </nav>
    <div class="main-wrapper">

        <!-- Profile Modal (Professional ID Card) -->
        <% if (user) { %>
            <div id="profileModal" class="modal-backdrop">
                <div class="modal-card profile-card-container fade-in-up">
                    <button class="modal-close" style="color: white; z-index: 20;"
                        onclick="closeProfileModal()">&times;</button>

                    <div class="profile-card-header">
                        <h3>Personal Details</h3>
                    </div>

                    <div class="profile-avatar-container" style="flex-direction: column; align-items: center;">
                        <form action="/auth/update-avatar" method="POST" enctype="multipart/form-data" id="avatarForm"
                            style="margin:0;">
                            <div class="id-avatar-wrapper">
                                <img src="/uploads/<%= user.avatar || ' default-avatar.png' %>" class="id-avatar"
                                    alt="Profile" id="modalAvatarPreview"
                                    onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= user.name %>&background=CC2936&color=fff&size=128';">
                                <label for="avatarInput" class="id-edit-badge" title="Update Photo">
                                    <i class="fas fa-camera" style="font-size: 14px;"></i>
                                </label>
                                <input type="file" name="avatar" id="avatarInput" accept="image/*" hidden
                                    onchange="document.getElementById('avatarForm').submit()">
                            </div>
                        </form>
                        <% if (user.avatar && user.avatar !=='default-avatar.png' ) { %>
                            <form action="/auth/remove-avatar" method="POST" style="margin-top: 10px;">
                                <button type="submit" class="btn-text-muted"
                                    style="font-size: 0.8rem; color: #dc3545;">Remove
                                    Photo</button>
                            </form>
                            <% } %>
                    </div>

                    <div class="profile-info-body">
                        <h2 class="user-display-name">
                            <%= user.name.replace(/\s*\d{9}$/, '' ) %>
                        </h2>
                        <div class="user-id-pill">ID: <%= user.studentId || 'N/A' %>
                        </div>

                        <div class="info-grid">
                            <div class="info-row">
                                <div class="info-icon"><i class="fas fa-envelope"></i></div>
                                <div class="info-content">
                                    <label>Email Address</label>
                                    <span>
                                        <%= user.email %>
                                    </span>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-icon"><i class="fas fa-phone-alt"></i></div>
                                <div class="info-content">
                                    <label>Contact Number</label>
                                    <span>
                                        <%= user.contactNumber || 'Not Set' %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer-actions">

                            <a href="/auth/logout" class="btn btn-logout btn-block">
                                <i class="fas fa-sign-out-alt"></i> Log out
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <script>
                function openProfileModal(e) {
                    e.preventDefault();
                    document.getElementById('profileModal').style.display = 'flex';
                }

                function closeProfileModal() {
                    document.getElementById('profileModal').style.display = 'none';
                }

                // Close on backdrop click
                window.onclick = function (event) {
                    const modal = document.getElementById('profileModal');
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            </script>
            <% } %>