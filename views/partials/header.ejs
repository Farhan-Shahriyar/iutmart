<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !='undefined' ? title : 'IUT MARKETPLACE' %> | IUT MART
    </title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Inter:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: '#0b0e11',
                        surface: '#1e222d',
                        border: '#2a2e39',
                        bull: '#00e396',
                        bear: '#ff007a',
                        action: '#2962ff',
                        text: { primary: '#ffffff', secondary: '#b2b5be' }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        mono: ['IBM Plex Mono', 'monospace'],
                    }
                }
            }
        }
    </script>

    <!-- Scripts -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-bg text-text-primary font-sans antialiased min-h-screen flex flex-col" x-data="{ profileOpen: false }">

    <!-- Ticker Tape (Disabled) -->
    <!-- <div class="bg-black ..."></div> -->

    <!-- Navigation -->
    <nav class="bg-surface border-b border-border sticky top-0 z-50">
        <div class="container mx-auto px-4 h-16 flex items-center justify-between">
            <!-- Brand -->
            <a href="/" class="flex items-center space-x-3 group">
                <div x-data="{ code: '00', flicker: false }"
                    x-init="setInterval(() => { code = Math.floor(Math.random() * 99).toString().padStart(2, '0'); flicker = Math.random() > 0.8; }, 80)"
                    class="w-10 h-10 bg-black border border-action/50 rounded flex flex-col items-center justify-center relative overflow-hidden group-hover:border-action transition shadow-[0_0_10px_rgba(41,98,255,0.2)]">
                    <!-- Scanline -->
                    <div
                        class="absolute inset-0 bg-gradient-to-b from-transparent via-action/10 to-transparent animate-scan">
                    </div>

                    <!-- Dynamic Numbers -->
                    <span x-text="code" class="text-action font-mono font-bold text-lg leading-none tracking-tighter"
                        :class="flicker ? 'opacity-50' : 'opacity-100'"></span>

                    <!-- Sub-text -->
                    <span class="text-[6px] text-text-secondary font-mono leading-none mt-0.5">NET</span>
                </div>
                <span class="text-lg font-bold tracking-tight">IUT MARKETPLACE</span>
                <span class="text-[10px] text-text-secondary font-mono tracking-widest">SECURE STUDENT TRADING
                    TERMINAL</span>
        </div>
        </a>

        <!-- Nav Links -->
        <div class="hidden md:flex items-center space-x-1">
            <a href="/products"
                class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-white hover:bg-border/50 rounded transition">MARKETS</a>

            <% if (user) { %>
                <a href="/products/create"
                    class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-white hover:bg-border/50 rounded transition flex items-center space-x-2">
                    <i class="fas fa-plus text-xs"></i>
                    <span>IPO</span>
                </a>
                <a href="/chat"
                    class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-white hover:bg-border/50 rounded transition relative">
                    <span>COMMS</span>
                    <% if (locals.unreadCount && locals.unreadCount> 0) { %>
                        <span class="absolute top-1 right-2 w-2 h-2 bg-action rounded-full animate-pulse"></span>
                        <% } %>
                </a>

                <!-- Profile Dropdown -->
                <div class="relative ml-4" x-data="{ open: false }">
                    <button @click="open = !open" @click.outside="open = false"
                        class="flex items-center space-x-2 focus:outline-none">
                        <img src="<%= user.avatar %>" class="w-8 h-8 rounded border border-border bg-black object-cover"
                            onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= user.name %>&background=0b0e11&color=fff&size=64';">
                        <div class="flex flex-col items-start">
                            <span class="text-xs font-mono text-white">
                                <%= user.name.split(' ')[0] %></span>
                                <span class="text-[10px] text-bull font-mono">ONLINE</span>
                            </div>
                            <i class="fas fa-chevron-down text-xs text-text-secondary"></i>
                        </button>

                        <div x-show="open" 
                             class="absolute right-0 mt-2 w-56 bg-surface border border-border rounded shadow-xl py-1 z-50"
                             style="display: none;">
                            
                            <div class="px-4 py-3 border-b border-border">
                                <p class="text-sm text-white font-medium truncate"><%= user.name %></p>
                                <p class="text-xs text-text-secondary font-mono truncate">ID: <%= user.studentId || `N/A` %></p>
                            </div>

                            <button @click="open = false; profileOpen = true"
                                        class="block w-full text-left px-4 py-2 text-sm text-text-secondary hover:bg-bg hover:text-white transition group">
                                        <i class="fas fa-id-card mr-2 text-action group-hover:text-white"></i>
                                        MY PROFILE
                                    </button>

                        <a href="/dashboard"
                            class="block px-4 py-2 text-sm text-text-secondary hover:bg-bg hover:text-white transition">
                            <i class="fas fa-chart-line mr-2"></i>
                            PORTFOLIO
                        </a>
                        <a href="/auth/logout"
                            class="block px-4 py-2 text-sm text-bear hover:bg-bg transition hover:text-bear">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                            DISCONNECT
                        </a>
                    </div>
            </div>

            <!-- Modal moved to bottom of file for Z-Index fix -->

            <% } else { %>
                <div class="flex items-center space-x-4 ml-4">
                    <a href="/auth/login" class="text-sm font-medium text-text-secondary hover:text-white">LOGIN</a>
                    <a href="/auth/register"
                        class="px-4 py-1.5 text-sm font-bold bg-action hover:bg-blue-600 text-white rounded">JOIN
                        MARKETPLACE</a>
                </div>
                <% } %>
        </div>
        </div>
    </nav>



                                        <% if (typeof user !==' undefined' && user) { %>
                                    <!-- Profile Modal (Refactored to use local state) -->
                                    <div x-show="profileOpen" style="display: none;"
                                        class="fixed inset-0 z-[100] flex items-center justify-center px-4">

                                        <!-- Backdrop -->
                                        <div x-show="profileOpen" x-transition:enter="transition ease-out duration-300"
                                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                                            x-transition:leave="transition ease-in duration-200"
                                            x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
                                            @click="profileOpen = false"
                                            class="absolute inset-0 bg-black/80 backdrop-blur-sm"></div>

                                        <!-- Modal Card -->
                                        <div x-show="profileOpen" x-transition:enter="transition ease-out duration-300"
                                            x-transition:enter-start="opacity-0 scale-95"
                                            x-transition:enter-end="opacity-100 scale-100"
                                            x-transition:leave="transition ease-in duration-200"
                                            x-transition:leave-start="opacity-100 scale-100"
                                            x-transition:leave-end="opacity-0 scale-95"
                                            class="relative bg-surface border border-border rounded-lg shadow-2xl w-full max-w-md overflow-hidden">

                                            <!-- Header -->
                                            <div
                                                class="bg-bg border-b border-border p-6 flex justify-between items-center bg-gradient-to-r from-bg to-surface">
                                                <h3
                                                    class="text-xl font-bold text-white font-mono flex items-center gap-2">
                                                    <span class="w-1 h-5 bg-action block"></span>
                                                    PERSONNEL FILE
                                                </h3>
                                                <button @click="profileOpen = false"
                                                    class="text-text-secondary hover:text-white transition">
                                                    <i class="fas fa-times text-lg"></i>
                                                </button>
                                            </div>

                                            <div class="p-8">
                                                <!-- Avatar Section -->
                                                <div class="flex flex-col items-center mb-8 relative group">
                                                    <div
                                                        class="relative w-32 h-32 rounded-full border-4 border-surface shadow-2xl overflow-hidden mb-4 bg-black">
                                                        <img src="<%= user.avatar %>" class="w-full h-full object-cover"
                                                            onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= user.name %>&background=0b0e11&color=fff&size=128';">

                                                        <!-- Edit Overlay -->
                                                        <div class="absolute inset-0 bg-black/60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300 cursor-pointer"
                                                            onclick="document.getElementById('avatarUpload').click()">
                                                            <i class="fas fa-camera text-2xl text-white"></i>
                                                        </div>
                                                    </div>

                                                    <div class="text-center">
                                                        <h2 class="text-2xl font-bold text-white">
                                                            <%= user.name.replace(/\d+/g, '' ).trim() %>
                                                        </h2>
                                                        <div class="flex items-center justify-center gap-2 mt-1">
                                                            <span
                                                                class="text-xs font-mono text-bull bg-bull/10 px-2 py-0.5 rounded border border-bull/20">CLEARANCE:
                                                                AAA</span>
                                                            <span class="text-xs font-mono text-text-secondary">ID:
                                                                <%= user.studentId || 'N/A' %>
                                                            </span>
                                                        </div>
                                                    </div>

                                                    <!-- Hidden Upload Form -->
                                                    <form action="/auth/update-avatar" method="POST"
                                                        enctype="multipart/form-data" id="avatarForm" class="hidden">
                                                        <input type="file" name="avatar" id="avatarUpload"
                                                            accept="image/*"
                                                            onchange="document.getElementById('avatarForm').submit()">
                                                    </form>
                                                </div>

                                                <!-- Details Grid -->
                                                <div
                                                    class="grid grid-cols-1 gap-4 text-sm font-mono border-t border-border pt-6">
                                                    <div
                                                        class="flex justify-between items-center p-3 bg-bg rounded border border-border/50">
                                                        <span class="text-text-secondary">CONTACT</span>
                                                        <span class="text-white">
                                                            <%= user.contactNumber || 'N/A' %>
                                                        </span>
                                                    </div>
                                                    <div
                                                        class="flex justify-between items-center p-3 bg-bg rounded border border-border/50">
                                                        <span class="text-text-secondary">EMAIL</span>
                                                        <span class="text-white truncate max-w-[200px]">
                                                            <%= user.email %>
                                                        </span>
                                                    </div>
                                                    <div
                                                        class="flex justify-between items-center p-3 bg-bg rounded border border-border/50">
                                                        <span class="text-text-secondary">MEMBER SINCE</span>
                                                        <span class="text-white">
                                                            <%= new Date(user.createdAt).toLocaleDateString() %>
                                                        </span>
                                                    </div>
                                                </div>

                                                <!-- Actions -->
                                                <div class="mt-8 flex gap-3">
                                                    <button onclick="document.getElementById('avatarUpload').click()"
                                                        class="flex-1 bg-action hover:bg-blue-600 text-white font-bold py-3 rounded font-mono text-xs transition shadow-lg shadow-action/20">
                                                        CHANGE PHOTO
                                                    </button>

                                                    <form action="/auth/remove-avatar" method="POST" class="flex-1"
                                                        onsubmit="return confirm('Remove profile picture?');">
                                                        <button type="submit"
                                                            class="w-full bg-bear/10 hover:bg-bear text-bear hover:text-white border border-bear/20 hover:border-bear font-bold py-3 rounded font-mono text-xs transition">
                                                            REMOVE PHOTO
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                        <div class="flex-grow">