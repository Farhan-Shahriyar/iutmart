<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - IUT Marketplace</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="auth-container">
        <div class="auth-header">
            <h2>Create Account</h2>
            <p>Join the student marketplace community</p>
        </div>

        <% if (locals.error && locals.error.length> 0) { %>
            <div class="alert">
                <i class="fas fa-exclamation-circle"></i>
                <%= error %>
            </div>
            <% } %>

                <div class="social-login">
                    <a href="/auth/google" class="btn btn-google">
                        <svg width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M17.64 9.20455C17.64 8.56636 17.5827 7.95273 17.4764 7.36364H9V10.845H13.8436C13.635 11.97 13.0009 12.9232 12.0477 13.5614V15.8195H14.9564C16.6582 14.2527 17.64 11.9455 17.64 9.20455Z"
                                fill="#4285F4" />
                            <path
                                d="M9 18C11.43 18 13.4673 17.1941 14.9564 15.8195L12.0477 13.5614C11.2418 14.1014 10.2109 14.4205 9 14.4205C6.65591 14.4205 4.67182 12.8373 3.96409 10.71H0.957275V13.0418C2.43818 15.9832 5.48182 18 9 18Z"
                                fill="#34A853" />
                            <path
                                d="M3.96409 10.71C3.78409 10.17 3.68182 9.59318 3.68182 9C3.68182 8.40682 3.78409 7.83 3.96409 7.29V4.95818H0.957275C0.347727 6.17318 0 7.54773 0 9C0 10.4523 0.347727 11.8268 0.957275 13.0418L3.96409 10.71Z"
                                fill="#FBBC05" />
                            <path
                                d="M9 3.57955C10.3214 3.57955 11.5077 4.03364 12.4405 4.92545L15.0218 2.34409C13.4632 0.891818 11.4259 0 9 0C5.48182 0 2.43818 2.01682 0.957275 4.95818L3.96409 7.29C4.67182 5.16273 6.65591 3.57955 9 3.57955Z"
                                fill="#EA4335" />
                        </svg>
                        Sign up with Google
                    </a>
                    <a href="/auth/github" class="btn btn-github">
                        <i class="fab fa-github"></i> Sign up with GitHub
                    </a>
                </div>

                <form action="/auth/register" method="POST" enctype="multipart/form-data">

                    <div class="avatar-upload-container">
                        <div class="avatar-upload" onclick="document.getElementById('avatarInput').click()">
                            <!-- Default Placeholder Icon -->
                            <div class="avatar-placeholder" id="avatarPlaceholder">
                                <i class="fas fa-camera"></i>
                            </div>

                            <!-- Preview Image (Hidden by default) -->
                            <img src="" id="avatarPreview" class="avatar-preview" alt="Profile">

                            <!-- Hover Overlay -->
                            <div class="avatar-overlay">
                                <i class="fas fa-camera"></i>
                            </div>

                            <input type="file" name="avatar" id="avatarInput" accept="image/*" style="display: none;"
                                onchange="previewImage(this)">
                        </div>
                        <button type="button" class="avatar-remove" id="removeBtn" onclick="removeImage()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="avatar-hint">
                        Upload Profile Photo (Optional)
                    </div>

                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" name="name" required placeholder="John Doe">
                    </div>

                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" name="email" required placeholder="student@iut-dhaka.edu">
                    </div>

                    <div class="form-group">
                        <label>Student ID (9 digits)</label>
                        <input type="text" name="studentId" required pattern="\d{9}"
                            title="Student ID must be exactly 9 digits" placeholder="e.g. 190041234">
                    </div>

                    <div class="form-group">
                        <label>Contact Number</label>
                        <input type="tel" name="contactNumber" required pattern="(?:\+88|88)?(01[3-9]\d{8})"
                            title="Please enter a valid Bangladesh phone number" placeholder="e.g. 01712345678">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" id="password" required placeholder="••••••••"
                            minlength="8">
                        <small class="input-hint">Must be at least 8 characters</small>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" required
                            placeholder="••••••••" minlength="8">
                    </div>

                    <button type="submit" class="btn btn-primary">Create Account</button>
                </form>

                <div class="auth-footer">
                    Already have an account? <a href="/auth/login">Login</a>
                </div>
    </div>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('avatarPreview');
                    const placeholder = document.getElementById('avatarPlaceholder');
                    const removeBtn = document.getElementById('removeBtn');

                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                    removeBtn.style.display = 'flex';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('avatarInput');
            const preview = document.getElementById('avatarPreview');
            const placeholder = document.getElementById('avatarPlaceholder');
            const removeBtn = document.getElementById('removeBtn');

            input.value = ''; // Clear input
            preview.src = '';
            preview.style.display = 'none';
            placeholder.style.display = 'flex';
            removeBtn.style.display = 'none';
        }

        const form = document.querySelector('form');
        form.addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
    </script>
</body>

</html>