<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INITIALISE PROTOCOL // IUT MART</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: '#09090b',
                        surface: '#18181b',
                        border: '#27272a',
                        bull: '#00e396',
                        bear: '#ff4560',
                        text: {
                            primary: '#ffffff',
                            secondary: '#a1a1aa'
                        },
                        action: '#3b82f6'
                    },
                    fontFamily: {
                        mono: ['"JetBrains Mono"', 'monospace'],
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #09090b;
            color: #ffffff;
            font-family: 'JetBrains Mono', monospace;
        }

        /* Subtle grid background */
        .bg-grid {
            background-size: 40px 40px;
            background-image: linear-gradient(to right, #27272a 1px, transparent 1px),
                linear-gradient(to bottom, #27272a 1px, transparent 1px);
            mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center relative py-12 px-4">
    <!-- Background Grid Effect -->
    <div class="absolute inset-0 bg-grid opacity-20 pointer-events-none fixed"></div>

    <div class="w-full max-w-lg relative z-10">
        <!-- Brand/Header -->
        <div class="text-center mb-8">
            <div
                class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-surface border border-border mb-4 shadow-lg shadow-action/10 group">
                <i class="fas fa-cube text-xl text-action group-hover:scale-110 transition duration-300"></i>
            </div>
            <h1 class="text-2xl font-bold tracking-tight text-white mb-2">NEW TRADER PROTOCOL</h1>
            <p class="text-text-secondary text-xs tracking-wider">ESTABLISH SECURE IDENTITY</p>
        </div>

        <div class="bg-surface border border-border rounded-lg shadow-2xl overflow-hidden backdrop-blur-sm">
            <!-- Terminal Header Bar -->
            <div class="bg-bg/50 border-b border-border px-4 py-2 flex items-center space-x-2">
                <div class="w-3 h-3 rounded-full bg-bear/50"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-bull/50"></div>
                <span class="ml-auto text-[10px] text-text-secondary">register.exe</span>
            </div>

            <div class="p-8">
                <% if (locals.error && locals.error.length> 0) { %>
                    <div
                        class="mb-6 bg-bear/10 border border-bear/20 text-bear px-4 py-3 rounded text-xs flex items-center">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <span>
                            <%= error %>
                        </span>
                    </div>
                    <% } %>

                        <div class="grid grid-cols-2 gap-4 mb-8">
                            <a href="/auth/google"
                                class="flex items-center justify-center px-4 py-2.5 border border-border rounded bg-white hover:bg-gray-100 transition duration-200 group">
                                <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="h-4 w-4 mr-2"
                                    alt="Google">
                                <span class="text-xs font-bold text-gray-900 font-sans">Google Signup</span>
                            </a>
                            <a href="/auth/github"
                                class="flex items-center justify-center px-4 py-2.5 border border-border rounded bg-[#24292e] hover:bg-[#2f363d] transition duration-200">
                                <i class="fab fa-github text-white text-lg mr-2"></i>
                                <span class="text-xs font-bold text-white font-sans">GitHub Signup</span>
                            </a>
                        </div>

                        <div class="relative mb-8">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-border"></div>
                            </div>
                            <div class="relative flex justify-center text-xs">
                                <span class="px-2 bg-surface text-text-secondary tracking-widest">MANUAL OVERRIDE</span>
                            </div>
                        </div>

                        <form action="/auth/register" method="POST" enctype="multipart/form-data" class="space-y-5">
                            <!-- Avatar Upload -->
                            <div class="flex justify-center mb-6">
                                <div class="relative group cursor-pointer"
                                    onclick="document.getElementById('avatarInput').click()">
                                    <div
                                        class="w-24 h-24 rounded-full bg-bg border-2 border-dashed border-border flex items-center justify-center overflow-hidden hover:border-action transition group-hover:shadow-lg group-hover:shadow-action/10">
                                        <img src="" id="avatarPreview" class="w-full h-full object-cover hidden">
                                        <div id="avatarPlaceholder" class="text-text-secondary text-center">
                                            <i class="fas fa-camera text-2xl mb-1"></i>
                                            <p class="text-[8px] uppercase">Upload ID</p>
                                        </div>
                                    </div>
                                    <div
                                        class="absolute inset-0 bg-black/50 rounded-full items-center justify-center hidden group-hover:flex transition">
                                        <i class="fas fa-edit text-white"></i>
                                    </div>
                                    <input type="file" name="avatar" id="avatarInput" accept="image/*" class="hidden"
                                        onchange="previewImage(this)">
                                </div>
                            </div>

                            <!-- Name & Email -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Full
                                        Name</label>
                                    <input type="text" name="name" required placeholder="JOHN DOE"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono">
                                </div>
                                <div>
                                    <label
                                        class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Email
                                        Address</label>
                                    <input type="email" name="email" required placeholder="student@iut-dhaka.edu"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono">
                                </div>
                            </div>

                            <!-- ID & Contact -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label
                                        class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Student
                                        ID (9 digits)</label>
                                    <input type="text" name="studentId" required pattern="\d{9}"
                                        title="Student ID must be exactly 9 digits" placeholder="190041234"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono tracking-widest">
                                </div>
                                <div>
                                    <label
                                        class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Contact
                                        Number</label>
                                    <input type="tel" name="contactNumber" required placeholder="01712345678"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono">
                                </div>
                            </div>

                            <!-- Passwords -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label
                                        class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Password</label>
                                    <input type="password" name="password" id="password" required placeholder="••••••••"
                                        minlength="8"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono">
                                    <p class="text-[8px] text-text-secondary mt-1 ml-1">MIN 8 CHARS</p>
                                </div>
                                <div>
                                    <label
                                        class="block text-[10px] font-bold text-text-secondary mb-1.5 uppercase">Confirm
                                        Passcode</label>
                                    <input type="password" name="confirmPassword" id="confirmPassword" required
                                        placeholder="••••••••" minlength="8"
                                        class="w-full bg-bg border border-border text-white text-xs rounded px-3 py-2.5 focus:border-action focus:ring-1 focus:ring-action outline-none transition placeholder-text-secondary/30 font-mono">
                                </div>
                            </div>

                            <button type="submit"
                                class="w-full bg-action hover:bg-blue-600 text-white font-bold py-2.5 rounded transition duration-200 shadow-lg shadow-action/20 flex items-center justify-center space-x-2 text-sm mt-6">
                                <span>INITIALISE ACCOUNT</span>
                                <i class="fas fa-check-circle text-xs"></i>
                            </button>
                        </form>
            </div>

            <div class="bg-bg/50 px-8 py-4 border-t border-border text-center">
                <p class="text-xs text-text-secondary">
                    Existing Trader? <a href="/auth/login"
                        class="text-action hover:text-white font-bold transition">Access Terminal</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('avatarPreview');
                    const placeholder = document.getElementById('avatarPlaceholder');
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    placeholder.classList.add('hidden');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        const form = document.querySelector('form');
        form.addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('ACCESS DENIED: Passwords do not match protocol.');
            }
        });
    </script>
</body>

</html>