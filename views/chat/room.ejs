<%- include('../partials/header') %>

    <div class="container fade-in">
        <div class="chat-container">
            <div class="chat-header" style="display: flex; align-items: center; gap: 10px;">
                <% if (!otherUser) { %>
                    <h3>
                        <%= title %>
                    </h3>
                    <% } else { %>
                        <div style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden;">
                            <% if (title==='Anonymous User' ) { %>
                                <img src="/images/default-avatar.png"
                                    style="width: 100%; height: 100%; object-fit: cover;" alt="Anonymous">
                                <% } else { %>
                                    <img src="/uploads/<%= otherUser.avatar || 'default-avatar.png' %>"
                                        style="width: 100%; height: 100%; object-fit: cover;" alt="User"
                                        onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= otherUser.name %>&background=CC2936&color=fff&size=64';">
                                    <% } %>
                        </div>
                        <h3 style="margin: 0;">
                            <%= title %>
                        </h3>
                        <% } %>
            </div>

            <div class="chat-messages" id="chat-messages">
                <% messages.forEach(msg=> { %>
                    <div
                        class="message <%= msg.sender.toString() === user._id.toString() ? 'my-message' : 'other-message' %>">
                        <p>
                            <%= msg.content %>
                        </p>
                        <span class="time">
                            <%= msg.timestamp.toLocaleTimeString([], {hour: '2-digit' , minute:'2-digit'}) %>
                        </span>
                    </div>
                    <% }) %>
            </div>

            <div class="chat-input fade-in">
                <form id="chat-form">
                    <input type="text" id="msg" placeholder="Type a message..." required autocomplete="off">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const chatForm = document.getElementById('chat-form');
        const chatMessages = document.querySelector('.chat-messages');
        const sender = '<%= user._id %>';
        const receiver = '<%= otherUser._id %>';

        // Join my room
        socket.emit('join', sender);

        // Message from server
        socket.on('message', (message) => {
            // Only display if it's relevant to this conversation
            if (message.sender === receiver || message.sender === sender) {
                outputMessage(message);
            }
        });

        // Message submit
        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();

            const msgInput = document.getElementById('msg');
            const content = msgInput.value;

            // Emit message to server
            socket.emit('chatMessage', { sender, receiver, content, productId: '<%= productId %>' });

            // Clear input
            msgInput.value = '';
            msgInput.focus();
        });

        function outputMessage(message) {
            const div = document.createElement('div');
            div.classList.add('message');
            div.classList.add(message.sender === sender ? 'my-message' : 'other-message');

            // Format time properly (simple version)
            const time = new Date(message.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            div.innerHTML = `<p>${message.content}</p><span class="time">${time}</span>`;
            chatMessages.appendChild(div);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Scroll to bottom on load
        chatMessages.scrollTop = chatMessages.scrollHeight;
    </script>

    <style>
        .chat-container {
            max-width: 800px;
            margin: 2rem auto;
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            height: 70vh;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .chat-header {
            padding: 1rem;
            background: rgba(255, 255, 255, 0.8);
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .chat-messages {
            flex: 1;
            padding: 1rem;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .message {
            max-width: 70%;
            padding: 10px 15px;
            border-radius: 20px;
            position: relative;
        }

        .my-message {
            align-self: flex-end;
            background: var(--primary);
            color: white;
            border-bottom-right-radius: 0;
        }

        .other-message {
            align-self: flex-start;
            background: #e0e0e0;
            color: #333;
            border-bottom-left-radius: 0;
        }

        .time {
            display: block;
            font-size: 0.7rem;
            margin-top: 5px;
            opacity: 0.8;
            text-align: right;
        }

        .chat-input {
            padding: 1rem;
            background: rgba(255, 255, 255, 0.8);
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .chat-input form {
            display: flex;
            gap: 10px;
        }

        .chat-input input {
            flex: 1;
            padding: 10px;
            border-radius: 20px;
            border: 1px solid #ddd;
            color: #333 !important;
            background: #fff !important;
        }

        .chat-input button {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }
    </style>

    <%- include('../partials/footer') %>